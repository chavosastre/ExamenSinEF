@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Clave</th>
        <th>Nombre</th>
        <th>Dirección</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
    <tr>
        <td>@Model.Rows[i][0]</td>
        <td>@Model.Rows[i][0]</td>
        <td>@Model.Rows[i][2]</td>
        <td>
            <a href="@Url.Action("Edit","School", new {@id = Model.Rows[1][0].ToString().Replace(" ","")})">Editar</a>
            <a href="@Url.Action("Delete","School", new {@id = Model.Rows[1][0].ToString().Replace(" ","")})">Eliminar</a>
        </td>
    </tr>
    }
</table>

